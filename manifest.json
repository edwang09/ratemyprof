{
    "manifest_version": 2,
  "name": "Rate My BlueDemon Pop Up",
   "version": "1.2",
   "background": {
           "scripts": ["background.js"],
           "persistent": true
   }
   ,
   "content_scripts": [
     {
      "all_frames": true,
       "matches": [
           "<all_urls>",
       "https://www.ratemyprofessors.com/*"
       
       ],
  
       "js": ["content.js"]
  
     }
   ],
  
   "permissions": [
    "tabs",
    "identity",
    "http://localhost:9222/*",
    "https://www.ratemyprofessors.com/*",
		"https://campusconnect.depaul.edu/*"
  ],
  
  
   "browser_action": {
     "default_icon": "RMBD.png",
     "default_popup": "popup.html",
     "default_title": "See the ratings of your potential proffessors!"
   },
   
   "content_security_policy": "script-src 'self' 'unsafe-eval' https://apis.google.com/; object-src 'self'"
  
  }